<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/moren_back"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/tt"
        android:gravity="center"
        android:background="@drawable/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/OneSelf"
            android:layout_marginLeft="12dp"
            android:background="@drawable/ic_launcher"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:subtitleTextAppearance="@style/Toolbar.subTitleText"
            app:titleTextAppearance="@style/Toolbar.TitleText">


        </android.support.v7.widget.Toolbar>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/lunhuan"
        android:layout_width="fill_parent"
        android:layout_height="160dip"
        android:layout_below="@+id/tt"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="#33000000">

                <LinearLayout
                    android:id="@+id/ll_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    >
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/cutelinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lunhuan">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#FFFFFF" />

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_one"
        android:layout_below="@+id/cutelinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <GridView
                    android:id="@+id/gridview"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:numColumns="4"
                    android:gravity="center"
                    android:verticalSpacing="10dp"
                    android:layout_below="@+id/cutelinear"
                    tools:ignore="NotSibling" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_below="@+id/gridview"
                    android:background="@color/white"
                    android:src="@drawable/huabian" />



                <LinearLayout
                    android:id="@+id/tip"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:gravity="center"
                        android:id="@+id/tips"
                        android:minHeight="50dp"
                        android:maxHeight="120dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:textSize="12dp"
                        android:text="( ♡˙︶˙♡ )"
                        android:background="@drawable/button_shape2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <android.support.design.widget.TabLayout
                    android:id="@+id/a_layout"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="@color/moren_back"
                    app:tabGravity="center"
                    app:tabMode="fixed"
                    app:tabIndicatorColor="@color/colorAccent"
                    app:tabSelectedTextColor="@color/white">
                </android.support.design.widget.TabLayout>


                <android.support.v4.view.ViewPager
                    android:id="@+id/a_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:overScrollMode="never"
                    android:scrollbars="none" />



            </LinearLayout>

        </ScrollView>


    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>
