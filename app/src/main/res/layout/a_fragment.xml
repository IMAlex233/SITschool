<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/moren_back"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/tt"
        android:gravity="center"
        android:background="@drawable/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/OneSelf"
            android:layout_marginLeft="12dp"
            android:background="@drawable/ic_launcher"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:subtitleTextAppearance="@style/Toolbar.subTitleText"
            app:titleTextAppearance="@style/Toolbar.TitleText">


        </android.support.v7.widget.Toolbar>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/lunhuan"
        android:layout_width="fill_parent"
        android:layout_height="160dip"
        android:layout_below="@+id/tt"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="#33000000">

                <LinearLayout
                    android:id="@+id/ll_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    >
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/cutelinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lunhuan">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#FFFFFF" />

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_one"
        android:layout_below="@+id/cutelinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <GridView
                    android:id="@+id/gridview"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:numColumns="4"
                    android:gravity="center"
                    android:verticalSpacing="10dp"
                    android:layout_below="@+id/cutelinear"
                    tools:ignore="NotSibling" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_below="@+id/gridview"
                    android:background="@color/white"
                    android:src="@drawable/huabian" />



                <LinearLayout
                    android:id="@+id/tip"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:gravity="center"
                        android:id="@+id/tips"
                        android:minHeight="50dp"
                        android:maxHeight="120dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:textSize="12dp"
                        android:text="( ♡˙︶˙♡ )"
                        android:background="@drawable/button_shape2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/tianqi"
                    android:background="@drawable/textshape3"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp">
                        <TextView
                            android:id="@+id/weather"
                            android:text="天气："
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="200dp"
                            android:layout_height="20dp" />

                        <Button
                            android:id="@+id/more"
                            android:gravity="right"
                            android:textColor="@color/colorAccent"
                            android:background="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="更多>"
                            android:textSize="10dp"/>

                    </LinearLayout>


                    <View
                        android:id="@+id/div33"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_above="@id/navigation"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <ImageButton
                            android:id="@+id/weather_icon"
                            android:layout_marginLeft="30dp"
                            android:background="@color/white"
                            android:scaleType="centerCrop"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:id="@+id/weather_t1"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/weather_icon"
                            android:layout_width="80dp"
                            android:text="--℃"
                            android:layout_height="match_parent"
                            android:textSize="32dp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_marginRight="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/weather_t1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/weather_t2"
                                android:gravity="center_vertical"
                                android:textSize="11dp"
                                android:text="暂无信息"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />

                            <TextView
                                android:id="@+id/weather_t3"
                                android:gravity="center_vertical"
                                android:textSize="11dp"
                                android:text="暂无信息"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />

                            <TextView
                                android:id="@+id/weather_t4"
                                android:gravity="center_vertical"
                                android:textSize="11dp"
                                android:text="暂无信息"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/souhu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textshape3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp">
                        <TextView
                            android:text="News:"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="200dp"
                            android:layout_height="20dp" />

                        <Button
                            android:id="@+id/more2"
                            android:gravity="right"
                            android:background="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="更多>"
                            android:textColor="@color/colorAccent"
                            android:textSize="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_above="@id/navigation"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <TextView
                            android:layout_marginTop="8dp"
                            android:id="@+id/souhu_title"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:gravity="center_vertical"
                            android:text="暂无信息"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/souhu_subtitle"
                            android:layout_marginLeft="30dp"
                            android:textSize="12dp"
                            android:text="暂无信息"
                            android:layout_marginRight="30dp"
                            android:layout_below="@+id/souhu_title"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"/>

                        <ImageButton
                            android:id="@+id/souhu_iv"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/white"
                            android:scaleType="centerCrop"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>
                </LinearLayout>




                <LinearLayout
                    android:background="@drawable/textshape3"
                    android:id="@+id/moremore"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp">

                        <Button
                            android:background="@color/white"
                            android:text="热门话题"
                            android:textSize="13dp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:layout_width="200dp"
                            android:layout_height="match_parent" />

                        <Button
                            android:id="@+id/moreBox"
                            android:background="@color/white"
                            android:textSize="10dp"
                            android:text="更多>"
                            android:textColor="@color/colorAccent"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <View
                        android:id="@+id/div_tab_bar2"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"/>

                    <LinearLayout
                        android:id="@+id/recycler"
                        android:background="@color/white"
                        android:layout_below="@+id/moremore"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.RecyclerView
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/swzl"
                    android:background="@drawable/textshape3"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp">
                        <TextView
                            android:text="招领信息:"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="200dp"
                            android:layout_height="20dp" />

                    </LinearLayout>

                    <View
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_above="@id/navigation"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <TextView
                            android:text="暂无信息"
                            android:gravity="center_vertical"
                            android:id="@+id/swzl_title"
                            android:layout_marginLeft="30dp"
                            android:layout_width="180dp"
                            android:layout_height="35dp"
                            android:textSize="11dp"/>

                        <TextView
                            android:text="暂无信息"
                            android:id="@+id/swzl_subtitle"
                            android:layout_marginLeft="30dp"
                            android:textSize="11dp"
                            android:layout_below="@+id/swzl_title"
                            android:layout_width="180dp"
                            android:layout_height="45dp"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/swzl_time"
                            android:layout_marginLeft="30dp"
                            android:textSize="11dp"
                            android:layout_below="@+id/swzl_subtitle"
                            android:layout_width="180dp"
                            android:layout_height="20dp"
                            android:gravity="left"/>

                        <ImageView
                            android:id="@+id/swzl_iv"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="35dp"
                            android:layout_toRightOf="@+id/swzl_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"/>


                    </RelativeLayout>


                </LinearLayout>






            </LinearLayout>

        </ScrollView>


    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>
