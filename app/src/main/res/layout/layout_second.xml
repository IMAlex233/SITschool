<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/A1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:background="@drawable/secondlogo"/>
        <TextView
            android:layout_below="@+id/image"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="第二课堂教育管理系统"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/anme"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:text="学分："/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/A2"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/xuefen1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="详细："/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/A3"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xi"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="已申请的活动："/>


        <ImageView
            android:id="@+id/bi"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/xi"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/zhuangtailan"/>


        <TextView
            android:id="@+id/c1"
            android:layout_below="@id/bi"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/c2"
            android:layout_below="@id/c1"
            android:layout_width="match_parent"
            android:background="#dcdcdc"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/c3"
            android:layout_below="@id/c2"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/c4"
            android:layout_below="@id/c3"
            android:background="#dcdcdc"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/c5"
            android:layout_below="@id/c4"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/c6"
            android:layout_below="@id/c5"
            android:background="#dcdcdc"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/c7"
            android:layout_below="@id/c6"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/c8"
            android:layout_below="@id/c7"
            android:background="#dcdcdc"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/c9"
            android:layout_below="@id/c8"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/c10"
            android:layout_below="@id/c9"
            android:background="#dcdcdc"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>



    </RelativeLayout>

</LinearLayout>
