<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:background="@color/green_300">

            <RelativeLayout
                android:id="@+id/A"
                android:background="@drawable/textshape3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/myicon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_launcher" />


                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/myicon"
                    android:textColor="@color/red_300"
                    android:text="啊，朋友你好" />

                <TextView
                    android:id="@+id/qianming"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nickname"
                    android:layout_toRightOf="@+id/myicon"
                    android:textSize="12dp"
                    android:text="明德，明学，明事" />

                <TextView
                    android:id="@+id/APPid"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/qianming"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/myicon"
                    android:textSize="12dp"
                    android:text="ID:" />

                <TextView
                    android:id="@+id/xueyuan"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/APPid"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/myicon"
                    android:textSize="12dp"
                    android:text="学院:" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/myicon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/guanzhu"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="关注：0"/>


                    <Button
                        android:id="@+id/fensi"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:text="粉丝：0"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                    <Button
                        android:id="@+id/bianji"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:textColor="@color/green_300"
                        android:text="编辑"/>

                </LinearLayout>

            </RelativeLayout>

            <ScrollView
                android:id="@+id/B"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/A"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ListView
                        android:background="@drawable/textshape3"
                        android:id="@+id/list_view"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"/>


                    <FrameLayout
                        android:layout_below="@+id/list_view"
                        android:layout_marginTop="30dp"
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </ScrollView>



            <ImageButton
                android:id="@+id/center"
                android:layout_marginTop="20dp"
                android:layout_above="@+id/close"
                android:layout_marginBottom="10dp"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/zhuancenter"
                tools:ignore="NotSibling" />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/transparent"
            android:gravity="center">

            <ImageButton
                android:onClick="close"
                android:id="@+id/close"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/close2" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>