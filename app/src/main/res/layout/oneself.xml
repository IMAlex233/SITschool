<?xml version="1.0" encoding="utf-8"?>
<com.example.luhongcheng.TopToBottomFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/OneSelf"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/background_oneself"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">


            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/back"
                android:onClick="CloseOneSelf"
                android:src="@drawable/back2"
                android:scaleType="center"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="个人中心"
                app:titleTextAppearance="@style/Toolbar.TitleText">

            </android.support.v7.widget.Toolbar>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/A"
                android:gravity="center"
                android:background="@drawable/textshape3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <com.example.luhongcheng.ImageView.SWImageView
                    android:id="@+id/myicon"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_launcher"
                    android:layout_gravity="center"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="0.1dp"
                    app:type="circle" />


                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="145dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_300"
                    android:text="Hello" />

                <TextView
                    android:id="@+id/qianming"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="145dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nickname"
                    android:textSize="12dp"
                    android:text="明德，明学，明事" />

                <TextView
                    android:id="@+id/APPid"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/qianming"
                    android:layout_marginLeft="145dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/xueyuan"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/APPid"
                    android:layout_marginLeft="145dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/red_200"/>

                <LinearLayout
                    android:layout_marginTop="130dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/guanzhu"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="关注："/>


                    <TextView
                        android:gravity="center"
                        android:id="@+id/fensi"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:text="粉丝："
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                    <TextView
                        android:id="@+id/bianji"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:textColor="@color/green_300"
                        android:text="编辑"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/B"
                android:layout_below="@+id/A"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/text_shape1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="40dp">

                <ImageView
                    android:src="@drawable/find"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/find"
                    android:text="输入学号查找你的小伙伴"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/C"
                android:scrollbars="none"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/B"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ListView
                        android:background="@drawable/textshape3"
                        android:id="@+id/list_view"
                        android:dividerHeight="1sp"
                        android:divider="@color/moren_back"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"/>



                </RelativeLayout>
            </ScrollView>


        </RelativeLayout>


    </LinearLayout>
</com.example.luhongcheng.TopToBottomFinishLayout>