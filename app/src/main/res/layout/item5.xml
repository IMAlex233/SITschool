<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电费查询"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寝室号："
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/chaxun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="格式为:10+楼号+房间号"
            android:textSize="15dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/a"
            android:textColor="@color/moren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips：查询结果为每天定时更新数据，与实际数据会有误差。如需查询实时信息请至多媒体机查询。如对查询结果有疑问，请致电一卡通中心咨询，联系电话021-60873113。"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/b"
            android:textColor="@color/moren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="

Tips：学校服务器不稳定，连接内网查询成功几率更高哟，若等待10s后还没有信息，请刷新重试"
            android:layout_below="@+id/a"
            android:textSize="14dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房    间    号   ： "
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/room1"
            android:layout_toRightOf="@id/room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/A"
            android:layout_below="@id/room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存款余额(元)："
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/A1"
            android:layout_below="@id/room"
            android:layout_toRightOf="@id/A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/B"
            android:layout_below="@id/A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电补余额(元)："
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/B1"
            android:layout_below="@id/A"
            android:layout_toRightOf="@id/B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/C"
            android:layout_below="@id/B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计余额(元)："
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/C1"
            android:layout_below="@id/B"
            android:layout_toRightOf="@id/C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/D"
            android:layout_below="@id/C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用电量(度)："
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/D1"
            android:layout_below="@id/C"
            android:layout_toRightOf="@id/D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom= "true">



        <Button
            android:id="@+id/send_request"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape1"
            android:gravity="center"
            android:text="查询电费"
            />

    </LinearLayout>

</LinearLayout>

