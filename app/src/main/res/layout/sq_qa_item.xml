<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/textshape3"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <!--    <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_launcher" />-->


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="75dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Question:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/content"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:maxLines="3"
                android:text="answer:" />

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="75dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <com.example.luhongcheng.View.CircleImageView
                android:id="@+id/qa_icon"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/qa_nickname"
                android:text="2333"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/qa_pinglun"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/textshape2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="3dp"
        android:background="@color/moren_back"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5sp" />

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="14sp"
            android:text="10分钟前" />

        <LinearLayout
            android:layout_marginLeft="200dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp">



            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sq_share"
                    android:background="@drawable/ic_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/discuss"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/qa_discuss"
                    android:background="@drawable/comment"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/zan"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/qa_zan"
                    android:background="@drawable/sq_zan_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/qa_zan_nums"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>




</LinearLayout>

