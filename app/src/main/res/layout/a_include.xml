<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_one"
        android:layout_below="@+id/cutelinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/tianqi"
                    android:background="@drawable/textshape3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp">
                        <TextView
                            android:id="@+id/weather"
                            android:text="天气："
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="200dp"
                            android:layout_height="20dp" />

                        <Button
                            android:id="@+id/more"
                            android:gravity="right"
                            android:textColor="@color/colorAccent"
                            android:background="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="更多>"
                            android:textSize="10dp"/>

                    </LinearLayout>


                    <View
                        android:id="@+id/div33"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_above="@id/navigation"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <ImageButton
                            android:id="@+id/weather_icon"
                            android:layout_marginLeft="20dp"
                            android:background="@color/white"
                            android:scaleType="centerCrop"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:id="@+id/weather_t1"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/weather_icon"
                            android:layout_width="70dp"
                            android:text="--℃"
                            android:layout_height="match_parent"
                            android:textSize="32dp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/weather_t1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/weather_t2"
                                android:gravity="center_vertical"
                                android:textSize="11dp"
                                android:text="暂无信息"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />

                            <TextView
                                android:id="@+id/weather_t3"
                                android:gravity="center_vertical"
                                android:textSize="11dp"
                                android:text="暂无信息"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />

                            <TextView
                                android:id="@+id/weather_t4"
                                android:gravity="center_vertical"
                                android:textSize="11dp"
                                android:text="暂无信息"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/souhu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textshape3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp">
                        <TextView
                            android:text="News:"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="200dp"
                            android:layout_height="20dp" />

                        <Button
                            android:id="@+id/more2"
                            android:gravity="right"
                            android:background="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="更多>"
                            android:textColor="@color/colorAccent"
                            android:textSize="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_above="@id/navigation"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <TextView
                            android:layout_marginTop="8dp"
                            android:id="@+id/souhu_title"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_marginRight="145dp"
                            android:layout_height="60dp"
                            android:gravity="center_vertical"
                            android:text="暂无信息"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/souhu_subtitle"
                            android:layout_marginLeft="20dp"
                            android:textSize="12dp"
                            android:text="暂无信息"
                            android:layout_marginRight="30dp"
                            android:layout_below="@+id/souhu_title"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"/>

                          <ImageButton
                            android:id="@+id/souhu_iv"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/white"
                            android:scaleType="centerCrop"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/swzl"
                    android:background="@drawable/textshape3"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp">
                        <TextView
                            android:text="招领信息:"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="200dp"
                            android:layout_height="20dp" />

                    </LinearLayout>

                    <View
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD"
                        android:layout_above="@id/navigation"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <TextView
                            android:text="暂无信息"
                            android:gravity="center_vertical"
                            android:id="@+id/swzl_title"
                            android:layout_marginLeft="20dp"
                            android:layout_width="180dp"
                            android:layout_height="35dp"
                            android:textSize="11dp"/>

                        <TextView
                            android:text="暂无信息"
                            android:id="@+id/swzl_subtitle"
                            android:layout_marginLeft="20dp"
                            android:textSize="11dp"
                            android:layout_below="@+id/swzl_title"
                            android:layout_width="180dp"
                            android:layout_height="45dp"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/swzl_time"
                            android:layout_marginLeft="20dp"
                            android:textSize="11dp"
                            android:layout_below="@+id/swzl_subtitle"
                            android:layout_width="180dp"
                            android:layout_height="20dp"
                            android:gravity="left"/>

                        <ImageView
                            android:id="@+id/swzl_iv"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_toRightOf="@+id/swzl_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"/>


                    </RelativeLayout>


                </LinearLayout>






            </LinearLayout>

        </ScrollView>


    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>