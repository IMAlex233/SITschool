<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/div"
        android:layout_marginTop="45dp"
        android:background="@color/moren_back"
        android:layout_width="match_parent"
        android:layout_height="0.3sp" />

    <ScrollView
        android:layout_below="@+id/div"
        android:layout_marginBottom="45dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/textshape9"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <com.example.luhongcheng.View.CircleImageView
                        android:id="@+id/icon"
                        android:layout_marginLeft="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <LinearLayout
                        android:layout_toRightOf="@+id/icon"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="100dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                        <TextView
                            android:id="@+id/nickname"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />

                        <TextView
                            android:id="@+id/qm"
                            android:layout_weight="1"
                            android:textSize="10dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/secondlayout_guanzhu"
                        android:text="关注"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/button_shape3"
                        android:layout_alignParentRight="true"
                        android:layout_width="50dp"
                        android:layout_height="25dp" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:textSize="17sp"
                        android:lineSpacingMultiplier="1.4"
                        android:textColor="@color/moren"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="title:" />

                    <ImageView
                        android:id="@+id/div2"
                        android:layout_marginTop="10dp"
                        android:background="@color/moren_back"
                        android:layout_width="match_parent"
                        android:layout_height="0.3sp" />

                    <TextView
                        android:id="@+id/content"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"
                        android:textColor="@color/moren"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="answer:" />

                    <com.example.luhongcheng.View.NineGridTestLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/layout_nine_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:sapcing="4dp" />

                    <TextView
                        android:id="@+id/time"
                        android:textSize="13sp"
                        android:textColor="@color/moren"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="15dp"
                        android:text="10分钟前" />
                </LinearLayout>



            </LinearLayout>

            <ImageView
                android:background="@color/moren_back"
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="暂无评论信息"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.example.luhongcheng.View.NoScrollListView
                    android:id="@+id/comment_listview"
                    android:scrollbars="none"
                    android:background="@color/white"
                    android:divider="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.example.luhongcheng.View.NoScrollListView>

            </RelativeLayout>



        </LinearLayout>
    </ScrollView>




    <RelativeLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/bugray_300"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:text="评论："
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/msg"
                android:layout_weight="1"
                android:background="@drawable/textshape3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                />

            <ImageView
                android:id="@+id/send_msg"
                android:scaleType="center"
                android:src="@drawable/ic_send"
                android:layout_width="60dp"
                android:layout_height="50dp" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>



