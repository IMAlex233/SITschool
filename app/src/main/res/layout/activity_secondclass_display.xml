<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moren_back"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_oneself"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="详情"
        app:subtitleTextAppearance="@style/Toolbar.subTitleText"
        app:titleTextAppearance="@style/Toolbar.TitleText">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:background="@drawable/textshape3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题:"
            android:textColor="@color/moren"
            android:textSize="25sp"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/moren"
            android:layout_width="match_parent"
            android:layout_height="0.5sp"/>



        <TextView
            android:id="@+id/title1"
            android:scrollbars="vertical"
            android:textColor="@color/moren"
            android:background="@drawable/textshape2"
            android:lineSpacingMultiplier="1.3"
            android:layout_below="@id/title0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小标题:"
            android:textSize="14sp"/>

        <ScrollView
            android:layout_marginTop="10dp"
            android:background="@drawable/textshape2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title2"
                android:lineSpacingMultiplier="1.4"
                android:textSize="16sp"
                android:scrollbars="vertical"
                android:textColor="@color/moren"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </ScrollView>


    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/shenqing"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/button_shape1"
            android:text="-申请-"
            android:textSize="14sp" />

    </LinearLayout>




</RelativeLayout>



