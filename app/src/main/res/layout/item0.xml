<?xml version="1.0" encoding="utf-8"?>
<com.example.luhongcheng.TopToBottomFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:onClick="close"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="#00000000"/>

        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/huawen2"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>


        <ScrollView
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="#ffffff"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:background="@color/blue_300"
                    android:src="@drawable/person"
                    android:onClick="wode"/>

                <ImageButton
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:background="@color/blue_300"
                    android:src="@drawable/tiwen"
                    android:onClick="question"/>

                <ImageButton
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/blue_300"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shequ"
                    android:onClick="shequ"/>

                <ImageButton
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/blue_300"
                    android:scaleType="centerCrop"
                    android:src="@drawable/swzl"
                    android:onClick="swzl"/>


                <TextView
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="下滑关闭"/>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</com.example.luhongcheng.TopToBottomFinishLayout>
